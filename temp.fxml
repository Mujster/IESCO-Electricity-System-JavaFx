<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<GridPane fx:controller="com.example.CalendarController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER">
        <HBox spacing="10">
            <Button text="Previous" onAction="#previousMonth"/>
            <Button text="Next" onAction="#nextMonth"/>
        </HBox>
        <HBox>
            <Button text="Sun" prefWidth="40"/>
            <Button text="Mon" prefWidth="40"/>
            <Button text="Tue" prefWidth="40"/>
            <Button text="Wed" prefWidth="40"/>
            <Button text="Thu" prefWidth="40"/>
            <Button text="Fri" prefWidth="40"/>
            <Button text="Sat" prefWidth="40"/>
        </HBox>
        <GridPane fx:id="calendarGrid" hgap="2" vgap="2"/>
    </VBox>
</GridPane>
